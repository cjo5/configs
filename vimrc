set nocompatible

filetype off

" Plugins here

syntax on

filetype plugin indent on

let mapleader="\<Space>"

set background=dark
set encoding=utf-8
set noerrorbells visualbell t_vb = " no bells
set clipboard=unnamed " system clipboard
set mouse=a

set title
set number
set showmode
set showcmd
set ruler
set confirm

set showmatch " matching braces/brackets/parens
set cursorline " highlight current line
set incsearch
set ignorecase " case insentive search
set smartcase " case sensitive if uppercase is used

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

